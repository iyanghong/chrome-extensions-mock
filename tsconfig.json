{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "plugins/*": ["src/plugins/*"],
      "store/*": ["src/store/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "types": ["vite/client", "element-plus/global", "pinia-plugin-persist"],
  "skipLibCheck": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/manifest.tst.ts"
  ],
  "exclude": ["./src/background.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
